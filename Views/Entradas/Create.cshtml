@model ControleFinanceiro.Models.Entrada

<h1>Adicionar Entrada</h1>
<link rel="stylesheet" href="/css/site.css">
<form asp-action="Create" method="post">
    <div class="form-group">
        <label for="Data">Data</label>
        <input type="date" class="form-control" id="Data" asp-for="Data" />
        <span asp-validation-for="Data" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Valor">Valor</label>
        <input type="number" class="form-control" id="Valor" asp-for="Valor" step="0.01" />
        <span asp-validation-for="Valor" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Categoria">Categoria</label>
        <input type="text" class="form-control" id="Categoria" asp-for="Categoria" />
        <span asp-validation-for="Categoria" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Descricao">Descrição</label>
        <textarea class="form-control" id="Descricao" asp-for="Descricao"></textarea>
        <span asp-validation-for="Descricao" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Salvar</button>
</form>